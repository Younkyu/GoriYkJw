<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardCornerRadius="20dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/constrained">

            <ImageView
                android:layout_width="51dp"
                android:layout_height="46dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/img_tutee_fragment_one"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="신상문 튜터"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtWriter_tutee_fragment_one"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/img_tutee_fragment_one"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />

            <TextView
                android:text="2017-04-03 09:22:25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtDate_tutee_fragment_one"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:text="댄스로 ★매력발산/몸치탈출★"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTitle_tutee_fragment_one"
                android:textSize="16sp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txtDate_tutee_fragment_one"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:text="입금대기"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:background="@drawable/tab_text_border"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="8dp" />

            <TextView
                android:text="신청서 보류중, 입금하러 가기>>"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:layout_marginStart="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="80dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>