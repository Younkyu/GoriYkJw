<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/cardview_light_background"
    tools:context="goriproject.ykjw.com.myapplication.Apply_2Fragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/apply2_batang"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <View
            android:id="@+id/apply2_batang2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_custom"
            app:layout_constraintBottom_toTopOf="@+id/btn_next3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView99"
            app:layout_constraintVertical_bias="1.0"></View>

        <TextView
            android:id="@+id/tv_place_confirm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="장소 확인"
            android:textColor="#b6b6b6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply2_batang"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:text="첫수업만 결제"
            android:textColor="#b6b6b6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply2_batang"
            app:layout_constraintRight_toRightOf="@+id/apply2_batang" />

        <TextView
            android:id="@+id/tv_docuwrite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="신청서 작성"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply2_batang"
            app:layout_constraintLeft_toRightOf="@+id/tv_place_confirm2"
            app:layout_constraintRight_toLeftOf="@+id/textView34" />

        <goriproject.ykjw.com.myapplication.Custom.CircleImageView
            android:id="@+id/img_apply2_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply2_batang" />

        <TextView
            android:id="@+id/textView99"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bubble"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="수업 준비를 위해 아래 항목들에 대해\n미리 말씀해 주세요!"
            app:layout_constraintBottom_toBottomOf="@+id/img_apply2_profile"
            app:layout_constraintLeft_toRightOf="@+id/img_apply2_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_apply2_profile" />

        <Button
            android:id="@+id/btn_next3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/custom_signup_button"
            android:text="다음"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_yourlevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="자신의 레벨을 알려주세요"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/apply2_batang2"
            app:layout_constraintTop_toTopOf="@+id/apply2_batang2" />

        <Button
            android:id="@+id/btn_apply_starter"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_button3"
            android:gravity="bottom|center"
            android:text="입문자"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintLeft_toLeftOf="@+id/tv_yourlevel"
            app:layout_constraintTop_toBottomOf="@+id/tv_yourlevel" />

        <Button
            android:id="@+id/btn_apply_center"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom_button3"
            android:gravity="bottom|center"
            android:text="초/중급자"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintLeft_toRightOf="@+id/btn_apply_starter"
            app:layout_constraintRight_toLeftOf="@+id/btn_apply_sang"
            app:layout_constraintTop_toTopOf="@+id/btn_apply_starter" />

        <Button
            android:id="@+id/btn_apply_sang"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/custom_button3"
            android:gravity="bottom|center"
            android:text="상급자"
            android:textColor="@drawable/text_color_selector"
            app:layout_constraintRight_toRightOf="@+id/apply2_batang2"
            app:layout_constraintTop_toTopOf="@+id/btn_apply_center" />

        <TextView
            android:id="@+id/tv_almana"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="경력"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintLeft_toLeftOf="@+id/apply2_batang2"
            app:layout_constraintTop_toBottomOf="@+id/btn_apply_starter" />

        <EditText
            android:id="@+id/et_almana"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_custom"
            android:ems="10"
            android:hint=" 개월"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/apply2_batang2"
            app:layout_constraintTop_toBottomOf="@+id/tv_almana" />

        <EditText
            android:id="@+id/et_apply_sendmessage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_custom"
            android:ems="10"
            android:gravity="top|left"
            android:hint="튜터님에게 주의해야할 점을 알려주세요. 수업을 듣는 목적은 무엇인가요? 튜터님의 어떤 점이 마음에 들어 선택하셨나요?"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply2_batang2"
            app:layout_constraintLeft_toLeftOf="@+id/apply2_batang2"
            app:layout_constraintRight_toRightOf="@+id/apply2_batang2"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply_message" />

        <TextView
            android:id="@+id/tv_apply_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="튜터에게 전하는 말"
            android:textColor="@color/cardview_dark_background"
            app:layout_constraintLeft_toLeftOf="@+id/apply2_batang2"
            app:layout_constraintTop_toBottomOf="@+id/et_almana" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
