<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_top"
        android:layout_alignParentTop="true">

        <TextView
            android:text="칼퇴를 위한 실무 엑셀"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/subTitle"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:visibility="gone" />

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/subTab"
            android:layout_below="@+id/subTitle"
            app:tabSelectedTextColor="@color/colorAccent"
            style="@style/viewPagerTitle"
            android:visibility="gone" />

    </LinearLayout>


    <goriproject.ykjw.com.myapplication.Test.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/linearLayout_top"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Taling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20"
                    android:textSize="33sp"
                    android:gravity="center"
                    android:textStyle="normal|italic"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="20" />

                <Button
                    android:text="menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDrawerMenu"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    app:srcCompat="@drawable/test"
                    android:id="@+id/imageView1"
                    android:scaleType="fitXY"
                    android:translationY="@dimen/activity_vertical_margin" />

                <goriproject.ykjw.com.myapplication.Test.RadiusImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:src="@drawable/test2"
                    android:id="@+id/imageView2"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:text="Ashton / Ashton"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/txtWrite"
                    android:textAlignment="center" />

                <TextView
                    android:text="칼퇴를 위한 실무 엑셀"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:id="@+id/txtTitle"
                    android:textStyle="normal|bold"
                    android:textColor="@android:color/black"
                    android:textAlignment="center" />

                <TextView
                    android:text="New"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textAlignment="center"
                    android:id="@+id/textView7"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView6" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/framelayout"/>


                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView5" />


                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView4" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView3" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView2" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/textView1" />

            </LinearLayout>



            <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/relativeLayout">-->

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tab"
                app:tabSelectedTextColor="@color/colorAccent"
                style="@style/viewPagerTitle"/>

            <goriproject.ykjw.com.myapplication.Test.CustomPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewPager"
                android:layout_below="@+id/tab"/>

            <!--</RelativeLayout>-->

        </LinearLayout>

    </goriproject.ykjw.com.myapplication.Test.CustomScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout_bottom"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:text="수업 신청하기"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button3"
            android:layout_weight="5"
            android:background="@color/colorAccent"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/checkbox_wishList"
            android:button="@drawable/custom_checkbox"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageButton" />

    </LinearLayout>


</RelativeLayout>