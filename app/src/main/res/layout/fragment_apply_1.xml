<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFFFF"
    tools:context="goriproject.ykjw.com.myapplication.Apply_1Fragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/apply1_batang"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/colorAccent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></View>

        <TextView
            android:id="@+id/tv_place_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="장소 확인"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply1_batang"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="29dp"
            android:layout_marginRight="29dp"
            android:text="첫수업만 결제"
            android:textColor="#b6b6b6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply1_batang"
            app:layout_constraintRight_toRightOf="@+id/apply1_batang" />

        <TextView
            android:id="@+id/tv_docuwrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="신청서 작성"
            android:textColor="#b6b6b6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/apply1_batang"
            app:layout_constraintLeft_toRightOf="@+id/tv_place_confirm"
            app:layout_constraintRight_toLeftOf="@+id/textView3" />

        <goriproject.ykjw.com.myapplication.CircleImageView
            android:id="@+id/img_apply1_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apply1_batang"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="32dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bubble"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="수업장소와 가능한 시간을\n한번 더 확인해주세요."
            app:layout_constraintBottom_toBottomOf="@+id/img_apply1_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/img_apply1_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_apply1_profile"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/apply1_sepa_bottom"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#b6b6b6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6"></View>

        <View
            android:id="@+id/apply1_sepa_bottom2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#b6b6b6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7"></View>

        <View
            android:id="@+id/apply1_sepa_bottom3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="25dp"
            android:background="#b6b6b6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_apply1_canday"></View>

        <View
            android:id="@+id/apply1_sepa_bottom4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#b6b6b6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_aply_cantime"></View>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="위치\n확인"
            app:layout_constraintLeft_toLeftOf="@+id/img_apply1_profile"
            app:layout_constraintRight_toRightOf="@+id/img_apply1_profile"
            app:layout_constraintTop_toBottomOf="@+id/apply1_sepa_bottom" />

        <TextView
            android:id="@+id/tv_apply1_canday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="가능\n요일"
            app:layout_constraintLeft_toLeftOf="@+id/img_apply1_profile"
            app:layout_constraintRight_toRightOf="@+id/img_apply1_profile"
            app:layout_constraintTop_toBottomOf="@+id/apply1_sepa_bottom2" />

        <TextView
            android:id="@+id/tv_aply_cantime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="가능\n시간"
            app:layout_constraintLeft_toLeftOf="@+id/img_apply1_profile"
            app:layout_constraintRight_toRightOf="@+id/img_apply1_profile"
            app:layout_constraintTop_toBottomOf="@+id/apply1_sepa_bottom3" />

        <TextView
            android:id="@+id/tv_apply1_plusinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="장소 : 스터디룸"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_apply1_canday"
            app:layout_constraintTop_toBottomOf="@+id/apply1_sepa_bottom4" />

        <LinearLayout
            android:id="@+id/li_apply1_btnlayout1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:minHeight="30dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView6"
            app:layout_constraintRight_toRightOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView7">


        </LinearLayout>

        <Button
            android:id="@+id/btn_next2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_signup_button"
            android:text="다음"
            android:textColor="@color/cardview_light_background"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/li_apply1_btnlayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_apply1_canday"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/li_apply1_btnlayout1"
            app:layout_constraintRight_toRightOf="@+id/li_apply1_btnlayout1"
            app:layout_constraintTop_toTopOf="@+id/tv_apply1_canday"
            app:layout_constraintVertical_bias="0.515">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_apply1_btnlayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_aply_cantime"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/li_apply1_btnlayout2"
            app:layout_constraintRight_toRightOf="@+id/li_apply1_btnlayout2"
            app:layout_constraintTop_toTopOf="@+id/tv_aply_cantime"></LinearLayout>

    </android.support.constraint.ConstraintLayout>
</FrameLayout>
