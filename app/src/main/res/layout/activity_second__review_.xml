<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constll_second_review"
    tools:context="goriproject.ykjw.com.myapplication.SignInActivity">

    <View
        android:id="@+id/review_batang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/background_light"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/loginbar"

        app:layout_constraintTop_toTopOf="@+id/loginbar"
        app:layout_constraintVertical_bias="1.0"/>

    <TextView
        android:id="@+id/loginbar"
        android:layout_width="0dp"
        android:layout_height="59dp"

        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:text="리뷰 문의하기"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnReviewFinish_second_review"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:elevation="11dp"
        android:onClick="finishsignin"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="@+id/loginbar"
        app:layout_constraintTop_toTopOf="@+id/loginbar"
        app:srcCompat="@drawable/cancel"
        android:layout_marginEnd="8dp" />

    <RatingBar
        android:progressTint="@color/duskYellow"
        android:progressTintMode="src_atop"
        android:secondaryProgressTint="@color/lightGrey"
        android:secondaryProgressTintMode="src_atop"
        android:id="@+id/raiting_curriculum_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="1.0"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView13"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/loginbar" />

    <RatingBar
        android:progressTint="@color/duskYellow"
        android:progressTintMode="src_atop"
        android:secondaryProgressTint="@color/lightGrey"
        android:secondaryProgressTintMode="src_atop"
        android:id="@+id/raiting_friendliness_review"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="21dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2"
        android:stepSize="1.0"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raiting_delivery_review"
        app:layout_constraintLeft_toRightOf="@+id/textView25"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <RatingBar
        android:progressTint="@color/duskYellow"
        android:progressTintMode="src_atop"
        android:secondaryProgressTint="@color/lightGrey"
        android:secondaryProgressTintMode="src_atop"
        android:id="@+id/raiting_delivery_review"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2"

        android:stepSize="1.0"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/raiting_timeliness_review"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/raiting_friendliness_review"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.39"
        app:layout_constraintLeft_toRightOf="@+id/textView24"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <RatingBar
        android:progressTint="@color/duskYellow"
        android:progressTintMode="src_atop"
        android:secondaryProgressTint="@color/lightGrey"
        android:secondaryProgressTintMode="src_atop"
        android:id="@+id/raiting_timeliness_review"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="22dp"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2"

        android:stepSize="1.0"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raiting_readiness_review"
        app:layout_constraintBottom_toBottomOf="@+id/raiting_delivery_review"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/textView23"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <RatingBar
        android:progressTint="@color/duskYellow"
        android:progressTintMode="src_atop"
        android:secondaryProgressTint="@color/lightGrey"
        android:secondaryProgressTintMode="src_atop"
        android:id="@+id/raiting_readiness_review"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:isIndicator="false"
        android:numStars="5"
        android:rating="2"

        android:stepSize="1.0"
        app:layout_constraintLeft_toRightOf="@+id/textView22"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/raiting_curriculum_review"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.556"
        app:layout_constraintBottom_toBottomOf="@+id/raiting_timeliness_review"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="커리큘럼"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/loginbar"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전달력"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="준비성"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친철도"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView23"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간준수"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/edit_commen_review"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:gravity="top"
        android:hint="리뷰를 적어주세요"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raiting_friendliness_review" />

    <Button
        android:id="@+id/btnReviewCancel_second_review"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        android:background="@drawable/custom_signup_button"
        android:text="취소"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"


        android:layout_marginBottom="46dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_commen_review"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="60dp" />

    <Button
        android:id="@+id/btnUpload_second_review"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        android:background="@drawable/custom_signup_button"
        android:text="리뷰 올리기"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="46dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_commen_review"
        app:layout_constraintLeft_toRightOf="@+id/btnReviewCancel_second_review"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp" />

</android.support.constraint.ConstraintLayout>